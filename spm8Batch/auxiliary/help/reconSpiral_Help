    echo
    echo "A command to do the spiral reconscruction."
    echo 
    echo "All pfiles under a task will be processed if they match"
    echo "the specified name with the '-v' flag"
    echo

    . ${thisDir}/auxiliary/help/help_options_start

    echo
    echo " e.g."
    echo 
    echo " reconSpiral -f func/TASK1 RCW12ALS12345 -v fP"
    echo 
    echo " Current command default configuration is:"
    echo 

    . ${thisDir}/auxiliary/help/help_${thisCommand}_Options

