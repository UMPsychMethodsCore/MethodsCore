    echo
    echo " A command line command to erode segments p2 and p3 from vbm8HiRes"
    echo " and turn into WM and CSF masks."
    echo
    echo " THIS COMMAND RUNS RIGHT AWAY AND DOES NOT BUILD ANY SCRIPTS"
    echo
    . ${thisDir}/auxiliary/help/help_options_start

    echo 
    echo " e.g. "
    echo
    echo "   To process the image 'ht1spgr.nii' through VBM8 to create a skull-stripped"
    echo "   image in the native space do:"
    echo 
    echo "     erodeMask 050126zz"
    echo
    echo
    echo " Current command default configuration is:"
    echo 

    . ${thisDir}/auxiliary/help/help_erodeMask_Options
