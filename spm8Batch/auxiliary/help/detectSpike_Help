    echo
    echo " A command line to drive batch processing to detect spike instensities"
    echo " in slices for a 4D scan."
    echo
    . ${thisDir}/auxiliary/help/help_options_start


    echo " e.g. "
    echo
    echo "   To detect spikes:"
    echo 
    echo "     detectSpike -f func/MSIT 050126zz"
    echo
    echo 
    echo "*NOTE: This code will actually hunt out rapruns's (or those specified in the -v flag)"
    echo "       The code does not actually care where the files live. However you can narrow"
    echo "       the search by supplying the '-s subdir' option which will then require that"
    echo "       'subdir' is a string contained in the list of directories returned for warping."
    echo
    echo " Current command default configuration is:"
    echo 
    echo
    
    . ${thisDir}/auxiliary/help/help_${thisCommand}_Options
