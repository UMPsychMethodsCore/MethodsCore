    echo
    echo " A command line to drive batch processing to detect spike instensities"
    echo " in slices for a 4D scan."
    echo
    . ${thisDir}/auxiliary/help/help_options_start


    echo " e.g. "
    echo
    echo "   To detect spikes:"
    echo 
