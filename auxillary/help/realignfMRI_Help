    echo
    echo "A command line interface to realignment procedures in FSL."
    echo "This uses the FSL routines : fslmerge, fslsplit and mcflirt."
    echo 
    echo
    . ${thisDir}/auxillary/help/help_options_start

    echo
    echo " e.g."
    echo 
    echo "  To relign fmri volumes in runs 1,2,4 to 10th image in run 1 you would:"
    echo 
    echo "     relignfMRI -v vol -f func/MSIT -S img/ -F 10 -r 1 -r 2 -r 4 060402rw"
    echo 
    echo "  To realign fmri volumes in inclusive range of 1-10, to 10th in first do:"
    echo
    echo "     realignfMRI -v vol -f func/MSIT -S img/ -F 10 -i 1-10 060402rw"
    echo 
    echo " Current command default configuration is:"
    echo 
    echo
    
    . ${thisDir}/auxillary/help/help_${thisCommand}_Options

